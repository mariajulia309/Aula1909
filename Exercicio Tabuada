package exerciciotabuada;
import java.util.Scanner;
/**
 *
 * @author profslpa
 */
public class Exerciciotabuada {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner entrada = new Scanner(System.in);
       int numero, contador;
       
       
       System.out.println("Digite o numero da tabuada que seja maior que 0 e menor que 10");
       numero = entrada.nextInt();
       
        if((numero<=0) || (numero>10)){
           System.out.println("Error! Digite um numero maior que 0 e menor que 10");
        } else {
       contador = 0;
       while(contador <=10){
           System.out.println(numero + " X " + contador + " = " + numero*contador);
           contador++;
            }
       /* MESMA FUNÇÃO COM CODIGOS DIFERENTES WHILE/FOR 
       for (contador = 0;contador <=10;contador++;){
           System.out.println(numero + " X " + contador + " = " + numero*contador);
       } */
       }   
    } 
}
